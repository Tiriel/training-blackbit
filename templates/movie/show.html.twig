{% extends 'base.html.twig' %}

{% block title %}Movie : {{ movie.title ?? 'Not found.' }}{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Movie : {{ movie.title ?? 'Not found' }}</h1>

    {% if movie.title %}
    <ul>
        <li>Title : {{ movie.title }}</li>
        <li>Release date : {{ movie.releasedAt|date('d M Y') }}</li>
        <li>Genres : {{ movie.genre|join(', ') }}</li>
    </ul>
    {% else %}
        <p>No movie.</p>
    {% endif %}
</div>
{% endblock %}
